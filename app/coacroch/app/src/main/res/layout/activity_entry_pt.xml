<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context="com.example.gustavo.coacroch.DefineParams"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">


    <Button
        android:id="@+id/iPreteritoImper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Pretérito imperfeito"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iPreteritoPerfeito"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/iPreteritoPerfeito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Pretérito perfeito"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/iPreteritoImper"
        app:layout_constraintLeft_toRightOf="@+id/iPreteritoImper"
        app:layout_constraintRight_toLeftOf="@+id/iFuturoDopresente" />

    <Button
        android:id="@+id/iFuturoDopresente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Futuro do presente"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/iPreteritoPerfeito"
        app:layout_constraintLeft_toRightOf="@+id/iPreteritoPerfeito"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/iPresent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Presente"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/iPretéritoMQP"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iPretéritoMQP" />

    <Button
        android:id="@+id/iPretéritoMQP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Pretérito Mais que perfeito"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/iPresent"
        app:layout_constraintRight_toLeftOf="@+id/iFuturodoPretérito"
        app:layout_constraintTop_toBottomOf="@+id/iPreteritoPerfeito" />

    <Button
        android:id="@+id/iFuturodoPretérito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="futuro do pretérito"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/iPretéritoMQP"
        app:layout_constraintLeft_toRightOf="@+id/iPretéritoMQP"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/sFuturo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="futuro"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sPreteritoImperfeito"
        app:layout_constraintBaseline_toBaselineOf="@+id/sPreteritoImperfeito"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/sPresente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="presente"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/sPreteritoImperfeito"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/sPreteritoImperfeito"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/sPreteritoImperfeito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Pretérito imperfeito"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/sFuturo"
        app:layout_constraintRight_toLeftOf="@+id/sPresente"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iPretéritoMQP" />

    <Button
        android:id="@+id/iAfirmativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:fontFamily="sans-serif"
        android:text="Afirmativo"
        android:textColor="@android:color/background_light"
        android:textSize="8sp"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Jogar!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iAfirmativo"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Imperativo"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/sPreteritoImperfeito"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:fontFamily="sans-serif"
        android:text="    Subjuntivo"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/sPreteritoImperfeito"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintTop_toTopOf="@+id/iPretéritoMQP" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="1"
        android:fontFamily="serif"
        android:text="Indicativo"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
